    <style name="CommonButton" parent="@style/Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:textColor">#3C6D5F</item>
        <item name="android:gravity">center</item>
        <item name = "cornerRadius">5dp</item>
        <item name="android:textAllCaps">false</item>
        <item name = "backgroundTint">@color/white</item>
        <item name = "strokeWidth">1dp</item>>
        <item name = "strokeColor">@color/black</item>
        <item name="android:paddingLeft">35dp</item>
        <item name="android:paddingRight">35dp</item>
        <item name="rippleColor">@color/ripple_color</item>
        <item name="android:fontFamily">@font/actor_regular</item>
